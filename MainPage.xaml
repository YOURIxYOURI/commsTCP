<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="commsTCP.MainPage">

    <StackLayout>
        <Label Text="Maui TCP Komunikator" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="10, 20, 10, 0"/>

        <ScrollView>
            <StackLayout x:Name="ChatMessagesStack" Margin="10"/>
        </ScrollView>

        <Entry x:Name="MessageEntry" Placeholder="Wpisz wiadomość" Margin="10"/>
        <Button Text="Wyślij" Clicked="SendMessage_Clicked" Margin="10"/>
    </StackLayout>

</ContentPage>
